<h1>Grading Worksheet</h1>

<table>
  	<tr>
    		<th>Student ID</th>
    		<th>Student Name (Chinese)</th>
   		<th>Nick Name (English)</th>
   		<th>Project (40%)</th>
   		<th>Final (40%)</th>
    		<th>Lab (10%)</th>
    		<th>Class (10%)</th>
    		<th>Sum</th>
    		<th></th>
    		<th></th>
    		<th></th>
  	</tr>

<div>
<% @grades.each do |grade| %>
	
  	<tr>
   		<td><%= grade.num %></td>
   		<td><%= grade.name %></td>
   		<td><%= grade.nick %></td>
   		<td><%= grade.pro.to_s + "%" %></td>
   		<td><%= grade.exam.to_s + "%" %></td>
   		<td><%= grade.lab.to_s + "%"  %></td>
    		<td><%= grade.disc.to_s + "%"  %></td>
    		<td><%= (grade.pro+grade.lab+grade.exam+grade.disc).to_s + "%"  %>
    		<td><%= link_to 'Show', grade %></td>
   		<td><%= link_to 'Edit', edit_grade_path(grade) %></td>
   		<td><%= link_to 'Delete', grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
 	</tr>
 </div>
<% end %>
</table>
<br />

<%= link_to 'New Grade', new_grade_path %>
<br /><br />
<%  for i in 1..@pageTotal %>
	<span><%= link_to "#{i}", :controller => "grades", :action =>"lis", :id =>i %>
	</span>
<% end %>
<br /><br />
